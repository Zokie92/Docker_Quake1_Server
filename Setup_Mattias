import os

# Huvudmapp
project_dir = "Quake1_Mattias"

# Mappstruktur
folders = [
    "quake_data/id1",
    "quake_data/maps",
    "quake_data/mods",
    "wg-config",
    "dashboard"
]

# Minimal server.cfg innehåll
server_cfg_content = """hostname "Min Quake Server"
rcon_password "lösenord"
fraglimit 150
timelimit 35
map dm3
maxclients 16
maxspectators 2
"""

def create_project():
    # Skapa huvudmapp
    os.makedirs(project_dir, exist_ok=True)
    
    # Skapa submappar
    for folder in folders:
        path = os.path.join(project_dir, folder)
        os.makedirs(path, exist_ok=True)
    
    # Skapa server.cfg
    server_cfg_path = os.path.join(project_dir, "quake_data", "server.cfg")
    with open(server_cfg_path, "w") as f:
        f.write(server_cfg_content)
    
    # Skapa tom docker-compose.yml
    docker_compose_path = os.path.join(project_dir, "docker-compose.yml")
    if not os.path.exists(docker_compose_path):
        with open(docker_compose_path, "w") as f:
            f.write("# Fyll på med din docker-compose.yml\n")
    
    print(f"Projektstrukturen skapad i '{project_dir}'!")
    print("Glöm inte att lägga pak0.pak och pak1.pak i quake_data/id1/")

if __name__ == "__main__":
    create_project()